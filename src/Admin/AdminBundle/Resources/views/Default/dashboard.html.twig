{% extends ':default:admin.html.twig' %}

{% block content %}
    <style type="text/css">
        td{width:20%;}
    </style>
    <div class="clearfix" style="margin-bottom: 20px;">
        <div class="btn-group pull-right">
            <a href="{{ path('customers_new') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-user" aria-hidden="true" aria-label="New Customer"></span><span class="sr-only">New User</span></a>
            <a href="{{ path('orders_new') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true" aria-label="New Order"></span><span class="sr-only">New Customer</span></a>
        </div>
    </div>
    {# TODO: Make panels colapsible  #}
    {# TODO: Make widget out of panels #}
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <span class="panel-title">Backoffice Orders</span>
                    <span class="badge pull-right">{{ backoffice|length }}</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped records_list">
                        <tbody>
                            {% for order in backoffice %}
                                <tr>
                                    <td><a class="btn btn-link" href="{{ path('orders_show', { 'id': order.id }) }}">{{ order.number }}</a></td>
                                    <td>{{ order.customer.name }}</td>
                                    <td class="text-right">
                                        <span class="pull-left">RUB&nbsp;</span>
                                        {{ order.total/100|number_format(2, '.', ',') }}
                                    </td>
                                    <td>{{ order.createdAt|date('M-d H:i') }}</td>
                                    <td class="text-right">
                                        <span class="label
                                              {% if order.state == "backoffice" %}label-info                                                      
                                              {% elseif order.state == "post" %}label-primary
                                              {% elseif order.state == "document" %}label-warning
                                              {% else %}label-default
                                              {% endif %}
                                              ">{{ order.state|upper }}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
