{% extends ':default:admin.html.twig' %}

{% block content %}
{% block pageActions %}{% endblock %}
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Item</th>
      <th>Data</th>
      <th>Logged At</th>
    </tr>
  </thead>
  <tbody>
    {% for l in log %}
      <tr>
        <td>{{l.username}}</td>
        <td>
          <a href="{{ path("products_show", { 'id': l.product.id })}}" target="_blank">
            {{l.objectName}}
          </a>
        </td>
        <td>
          <table class="table table-bordered table-condensed">
            {% for key,value in l.data %}
              <tr><th>{{key|capitalize}}</th><td>{{value}}</td></tr>

            {% endfor %}
          </table>
        </td>
        <td>{{l.loggedAt|date}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{#{{ dump(log) }}#}
{% endblock %}