<div class="panel panel-default" style="height: 244px;">
    <div class="panel-heading">
        <span class="panel-title">Order Documents</span>
    </div>
    <div class="panel-body">
        {# FIXME: Delete links for files#}
        <div class="row">
            {%for document in order.orderDocuments%}
                {# FIXME: wordwrap for long links #}
                <div class="col-sm-6">
                    {% if document.path starts with 'http://www.mevisa.ru/' %}
                        <a href="{{ document.path }}" target="_blank">{{ document.name }}</a>
                    {% else %}
                        <a href="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ document.getWebPath }}" target="_blank">{{ document.name }}</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        <hr/>
        {# TODO: dropzone.js#}
        <div class="row">
            <div class="col-sm-9 col-sm-push-3">
                {{ form_widget(form.uploadedFiles)}}
            </div>
        </div>
    </div>
</div>
