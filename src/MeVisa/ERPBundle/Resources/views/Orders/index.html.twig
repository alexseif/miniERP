{% extends ':default:admin.html.twig' %}

{% block content %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-12">
            {#            <h3 class="page-header">#}
            <h3 class="page-header">
                Orders <small> {{ entities|length }} </small>
            </h3>
            <!-- breadcrumb -->
            {#<ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard
                </li>
            </ol>#}
        </div>
    </div>
    <!-- /.row -->
    <!-- page content -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped records_list">
                            <thead>
                                <tr>
                                    <th>Number</th>
                                    <th>State</th>
                                    <th>Customer</th>
                                    <th>Channel</th>
                                    <th>Subtotal</th>
                                    <th>Adjustment</th>
                                    <th>Total</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td>{{ entity.number }}</td>
                                        <td>{{ entity.state }}</td>
                                        <td>{{ entity.customer.name }}</td>
                                        <td>{{ entity.channel }}</td>
                                        <td>{{ entity.productsTotal/100|number_format(2, '.', ',') }} RUB</td>
                                        <td>{{ entity.adjustmentTotal/100|number_format(2, '.', ',') }} RUB</td>
                                        <td>{{ entity.total/100|number_format(2, '.', ',') }} RUB</td>
                                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>
                                            <a class="btn btn-primary" href="{{ path('orders_show', { 'id': entity.id }) }}">show</a>
                                            <a class="btn btn-primary" href="{{ path('orders_edit', { 'id': entity.id }) }}">edit</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <a class="btn btn-primary" href="{{ path('orders_new') }}">Add Order</a>
{% endblock %}
