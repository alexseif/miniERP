<div class="panel panel-default" id="order-docs">
    <div class="panel-heading">
        <span class="panel-title">Documents</span>
    </div>
    <div class="panel-body">
        {# FIXME: Delete links for files#}
        <div class="row">
            {%for document in order.orderDocuments%}
                <div class="col-xs-12 col-md-4">
                    <div class="thumbnail">
                        <a href="#" class="docs-link" data-link="{{ document.path}}" >
                            {% if document.path ends with 'pdf' %}
                                <span class="glyphicon glyphicon-file"></span>
                            {% else %}
                                <img src="{{ document.thumbnail ? document.thumbnail : document.path }}" alt="{{ document.name }}"/>
                            {% endif %}
                        </a>
                        <a href="{{ document.path}}" class="btn-sm" target="_blank">
                            <span>{{ document.name }}</span>
                            <span class="glyphicon glyphicon-new-window"></span>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr/>
        {# TODO: dropzone.js#}
        <div class="row">
            <div class="col-sm-9 col-sm-push-3">
                {{ form_widget(form.uploadedFiles)}}
            </div>
        </div>
    </div>
</div>
