<div class="panel panel-default" id="order-docs">
    <div class="panel-heading">
        <span class="panel-title">Order Documents</span>
    </div>
    <div class="panel-body">
        {# FIXME: Delete links for files#}
        <div class="row">
            {%for document in order.orderDocuments%}
                <div class="col-xs-12 col-md-4">
                    <a href="{{ document.path}}" class="thumbnail text-center" target="_blank">
                        {% if document.path ends with 'pdf' %}
                            <span class="glyphicon glyphicon-file"></span>
                        {% else %}
                            <img src="{{ document.thumbnail ? document.thumbnail : document.path }}" alt="{{ document.name }}"/>
                        {% endif %}
                        <span>{{ document.name }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
        <hr/>
        {# TODO: dropzone.js#}
        <div class="row">
            <div class="col-sm-9 col-sm-push-3">
                {{ form_widget(form.uploadedFiles)}}
            </div>
        </div>
    </div>
</div>
