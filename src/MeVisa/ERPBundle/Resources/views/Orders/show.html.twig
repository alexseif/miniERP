{% extends ':default:admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Order</span>
                    <div class="pull-right">
                        &nbsp;<span class="label label-default">{{ order.channel|upper }}</span>
                        &nbsp;<span class="label label-{{order.orderState.currentState.bootstrapClass}}">{{ order.stateName|upper }}</span>
                        &nbsp;<span class="label label-default"> {{ order.createdAt|date() }}</span>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <ul class="list-group">
                                    <li class="list-group-item"><label class="col-sm-2">Name</label> {{order.customer.name}}</li>
                                    <li class="list-group-item"><label class="col-sm-2">Email</label> {{order.customer.email}}</li>
                                    <li class="list-group-item"><label class="col-sm-2">Phone</label> {{order.customer.phone}}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <ul class="list-group" style="text-align: right;"> 
                                <li class="list-group-item"><label class="col-sm-3">Order#</label>{{ order.number }}</li>
                                <li class="list-group-item"><label class="col-sm-3">Adjustment</label>RUB {{ order.adjustmentTotal }}</li>
                                <li class="list-group-item"><label class="col-sm-3">Total</label>RUB {{ order.total }}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <span class="panel-title">Products</span>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped records_list">
                                        {%for product in order.orderProducts %}
                                            <tr>
                                                <td>{{ product.product.name }}</td>
                                                <td>{{ product.quantity }}</td>
                                                <td>{{ product.unitPrice }}</td>
                                                <td>{{ product.total }}</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <span class="panel-title">Companions</span>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped records_list">
                                        {% for companion in order.orderCompanions %}
                                            <tr>
                                                <td>{{companion.name}}</td>
                                                <td>{{companion.pax}}</td>
                                                <td>{{companion.nationality}}</td>
                                                <td>{{companion.passportNumber}}</td>
                                                <td>{#{{companion.passportExpiry}}#} jan 2014</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <span class="panel-title">Payments</span>
                                    <div class="pull-right">
                                        {#                                        <span class="label label-success">PAID</span>#}
                                        <span class="label label-success">PAID</span>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped records_list">
                                        {%for payment in order.orderPayments%}
                                            <tr>
                                                <td>{{ payment.method }}</td>
                                                <td>{{ product.amount }}</td>
                                                <td>{{ product.state }}</td>
                                                <td>{{ product.details }}</td>
                                                <td>{{ product.createdAt }}</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <span class="panel-title">Notes</span>
                                </div>
                                <div class="panel-body">
                                    {%for comment in order.orderComments%}
                                        {{ comment.author }}
                                        {{ product.comment }}
                                        {{ product.createdAt }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        {#                            <div class="col-sm-4">{{ form_row(form.total) }}</div>#}
                        {#                        <div class="col-sm-6">#}
                        {#                            <button class="btn-success btn" name="mevisa_erpbundle_orders[submit]" id="mevisa_erpbundle_orders_submit" type="submit">PAID</button>#}
                        {#                            <button class="btn-warning btn" name="mevisa_erpbundle_orders[submit]" id="mevisa_erpbundle_orders_submit" type="submit">DOCUMENT</button>#}
                        {#                        </div>#}
                        <div class="col-sm-12">
                            {# TODO: add form #}
                            <div class="btn-toolbar pull-right">
                                {% for child in order.orderState.currentState.children %}
                                    <button class="btn-{{child.bootstrapClass}} btn btn-toolbar" name="mevisa_erpbundle_orders[{{child.key}}]" id="mevisa_erpbundle_orders_{{child.key}}" type="submit">{{child.name}}</button>
                                {% endfor %}
                                {#                            <button class="btn-success btn pull-right" name="mevisa_erpbundle_orders[submit]" id="mevisa_erpbundle_orders_submit" type="submit">POST</button>#}
                            </div>
                        </div>
                        {#                <div class="col-sm-2">{{ form_row(form.submit) }}</div>#}
                    </div>
                </div>
            </div>
            <div class="pull-right"><a class="btn btn-warning" href="{{ path('orders') }}">Cancel</a></div>
        </div>
    </div>
{% endblock %}