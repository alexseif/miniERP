{% extends ':default:admin.html.twig' %}

{% block content %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-header">
                Order <small> {{ entity.number }} </small>
            </h3>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped records_list">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <th>Number</th>
                                    <td>{{ entity.number }}</td>
                                </tr>
                                <tr>
                                    <th>State</th>
                                    <td>{{ entity.state }}</td>
                                </tr>
                                <tr>
                                    <th>Customer</th>
                                    <td>{{ entity.customer }}</td>
                                </tr>
                                <tr>
                                    <th>Channel</th>
                                    <td>{{ entity.channel }}</td>
                                </tr>
                                <tr>
                                    <th>Productstotal</th>
                                    <td>{{ entity.productsTotal }}</td>
                                </tr>
                                <tr>
                                    <th>Adjustmenttotal</th>
                                    <td>{{ entity.adjustmentTotal }}</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td>{{ entity.total }}</td>
                                </tr>
                                <tr>
                                    <th>Createdat</th>
                                    <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Updatedat</th>
                                    <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Deletedat</th>
                                    <td>{{ entity.deletedAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Completedat</th>
                                    <td>{{ entity.completedAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-primary" href="{{ path('orders_edit', { 'id': entity.id }) }}">Edit</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-md-11">{{ form(delete_form) }}</div>
        <div class="col-md-1"><a class="btn btn-warning" href="{{ path('orders') }}">Back</a></div>
    </div>
    <!-- /.row -->
{% endblock %}