<div class="panel panel-default">
    <div class="panel-heading">
        <span class="panel-title">Companions</span>
{#        <a href="{{ path('orders_edit_companions', {'id': order.id}) }}" class="btn btn-xs text-primary pull-right"><span class="glyphicon glyphicon-pencil"></span> Edit companion</a>#}
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped records_list">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Nationality</th>
                    <th>Passport #</th>
                    <th>Passport Expiry</th>
                </tr>
            </thead>
            <tbody>
                {% for companion in order.orderCompanions %}
                    <tr>
                        <td>{{companion.name}}</td>
                        <td>{{companion.nationality}}</td>
                        <td>{{companion.passportNumber}}</td>
                        <td>{{companion.passportExpiry|date('d-m-Y')}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>