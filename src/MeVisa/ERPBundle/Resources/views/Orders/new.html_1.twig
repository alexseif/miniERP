{% extends ':default:admin.html.twig' %}

{% block content %}
    <style type="text/css">
        .panel .form-group{ margin-bottom: 5px;}
        .panel-body{font-size: 11px;}
        .panel-body label{font-weight: 550}
        .panel .control-label{padding-left: 5px; padding-right: 5px;}
    </style>
    {{ form_start(form) }}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <span class="panel-title">New Order</span>
            <div class="pull-right">
                <span class="label label-default">Channel {{ order.channel}}</span>
                &nbsp;<span class="label label-default">State {{ order.state}}</span>
                &nbsp;<span class="label label-default"> {{ order.createdAt|date() }}</span>
                {# {{ form_widget(form.channel) }} {{ form_widget(form.state) }}#}
            </div>
        </div>
        <div class="panel-body">
            {#            <div class="panel-group">#}
            <!-- Customer -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Customer</span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.name)}}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.nationality) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.email) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.passportNumber) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.phone) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.customer.vars.prototype.passportExpiry) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- Order details -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Products</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover records_list">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>PAX</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ form_widget(form.products.vars.prototype.product) }}</td>
                                <td></td>
                                {# <td>{{ form_widget(form.products.vars.prototype.pax) }}</td>#}
                                <td>{{ form_widget(form.products.vars.prototype.quantity) }}</td>
                                <td>{{ form_widget(form.products.vars.prototype.unitPrice) }}</td>
                                <td>{{ form_widget(form.products.vars.prototype.total) }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-body">
                    <a href="#" class="btn btn-block"><span class="glyphicon glyphicon-plus"></span></a>
                </div>
                <div class="panel-footer ">
                    <div class="row">
                        <div class="col-sm-4">
                            {# <span class="label label-primary" style="font-size: 14px;">RUB Subtotal</span>#}
                            {{ form_row(form.productsTotal) }}
                        </div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-6">{{ form_row(form.adjustmentTotal) }}</div>
                    </div>
                </div>
            </div>
            <!-- Companions -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Companions</span>
                </div>
                <div class="panel-body">
                    Table
                    <a href="#" class="btn btn-block"><span class="glyphicon glyphicon-plus"></span></a>
                </div>
            </div>
            <!-- Payment details -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Payment details</span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6 clearfix">
                            <div class="pull-left">
                                {{ form_row(form.payments.vars.prototype.method) }}
                                {{ form_row(form.payments.vars.prototype.amount) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.payments.vars.prototype.detail) }}
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    {{ form_row(form.payments.vars.prototype.state) }}
                </div>
            </div>
            <!-- Comments -->
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <span class="panel-title">Notes</span>
                    <div class="pull-right">
                        <span class="label label-default">Author</span>
                        {#{{ form_widget(form.comments.vars.prototype.author) }}#}
                    </div>
                </div>
                <div class="panel-body">
                    {{ form_widget(form.comments.vars.prototype.comment) }}
                </div>
            </div>
            <!-- Comments -->
            {#            </div>#}
        </div>
        <!-- panel body -->
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-4">{{ form_row(form.total) }}</div>
                <div class="col-sm-6"></div>
                <div class="col-sm-2">{{ form_row(form.submit) }}</div>
            </div>
        </div>
    </div>
    {{ form_end(form, {'render_rest': false}) }}
    <div class="pull-right"><a class="btn btn-warning" href="{{ path('orders') }}">Cancel</a></div>
    <!-- /.row -->
{% endblock %}
