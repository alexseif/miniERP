{# srv/MeVisa/ERPBundle/Resources/views/Orders/showOrderInvoice.html.twig #}
{% extends ':metronic:portlet.html.twig' %}

{% block title %}{{companySettings.jsonValue['name']}} Invoice {% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL STYLES -->
  <link href="/metronic/pages/css/invoice.min.css" rel="stylesheet" type="text/css" />
  <!-- END PAGE LEVEL STYLES -->
  <style>
    @media print {
      @page { margin: 0; }
      body { margin: 1.6cm; }
    }
  </style>
{% endblock %}
{% block portletBody %}
  <div class="invoice">
    <div class="row invoice-logo">
      <div class="col-xs-6 invoice-logo-space">
        <img src="{{ absolute_url(asset('images/visa_logo.png?v=1')) }}" class="img-responsive" alt="" width="230" /> </div>
      <div class="col-xs-6">
        <p>Счет № {{ invoice.id }}  от {{ "now" | format_date(null, 'ru', 'Europe/Moscow', constant('IntlDateFormatter::LONG')) }}</p>
        <p>{{companySettings.jsonValue['name']|raw}}</p>
        <p>{{ companySettings.jsonValue['address']|raw }}</p>
        <p>
          <b>ИНН:</b> 7734380567<br/>
          <b>КПП:</b> 773401001
        </p>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-xs-4">
        <h3>Заказчик:</h3>
        <ul class="list-unstyled">
          <li>{{order.customer.name}}</li>
          <li> Mr Nilson Otto </li>
          <li> FoodMaster Ltd </li>
          <li> Madrid </li>
          <li> Spain </li>
          <li> 1982 OOP </li>
        </ul>
        <h3>Плательщик:</h3> {{order.customer.name}}

      </div>
      <div class="col-xs-4">
        <h3>Получатель:</h3>
        <ul class="list-unstyled">
          <li>{{companySettings.jsonValue['name']|raw}}</li>
          <li>{{companySettings.jsonValue['bank']|raw}}</li>
        </ul>
      </div>
      <div class="col-xs-4 invoice-payment">
        <h3>Банк получателя:</h3>
        <ul class="list-unstyled">
          <li>Филиал "Бизнес онлайн" ПАО "ХАНТЫ-МАНСИЙСКИЙ БАНК ОТКРЫТИЕ"</li>
          <li><strong>БИК:</strong> 044525999</li>
          <li><strong>Корр. счет:</strong> 30101810845250000999 </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th> # </th>
              <th> Item </th>
              <th class="hidden-xs"> Description </th>
              <th class="hidden-xs"> Quantity </th>
              <th class="hidden-xs"> Unit Cost </th>
              <th> Total </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td> 1 </td>
              <td> Hardware </td>
              <td class="hidden-xs"> Server hardware purchase </td>
              <td class="hidden-xs"> 32 </td>
              <td class="hidden-xs"> $75 </td>
              <td> $2152 </td>
            </tr>
            <tr>
              <td> 2 </td>
              <td> Furniture </td>
              <td class="hidden-xs"> Office furniture purchase </td>
              <td class="hidden-xs"> 15 </td>
              <td class="hidden-xs"> $169 </td>
              <td> $4169 </td>
            </tr>
            <tr>
              <td> 3 </td>
              <td> Foods </td>
              <td class="hidden-xs"> Company Anual Dinner Catering </td>
              <td class="hidden-xs"> 69 </td>
              <td class="hidden-xs"> $49 </td>
              <td> $1260 </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <div class="well">
          <address>
            <strong>Loop, Inc.</strong>
            <br/> 795 Park Ave, Suite 120
            <br/> San Francisco, CA 94107
            <br/>
            <abbr title="Phone">P:</abbr> (234) 145-1810 </address>
          <address>
            <strong>Full Name</strong>
            <br/>
            <a href="mailto:#"> first.last@email.com </a>
          </address>
        </div>
      </div>
      <div class="col-xs-8 invoice-block">
        <ul class="list-unstyled amounts">
          <li>
            <strong>Sub - Total amount:</strong> $9265 </li>
          <li>
            <strong>Discount:</strong> 12.9% </li>
          <li>
            <strong>VAT:</strong> ----- </li>
          <li>
            <strong>Grand Total:</strong> $12489 </li>
        </ul>
        <br/>
        <a class="btn btn-lg blue hidden-print margin-bottom-5" onclick="javascript:window.print();"> Print
          <i class="fa fa-print"></i>
        </a>
        <a class="btn btn-lg green hidden-print margin-bottom-5"> Submit Your Invoice
          <i class="fa fa-check"></i>
        </a>
      </div>
    </div>
  </div>
{% endblock %}
