<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <span class="panel-title">Companions</span>
        <a href="#" class="btn btn-default addCompanion pull-right" id="add-companion"><span class="glyphicon glyphicon-plus-sign"></span></a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover records_list">
            <thead>
                <tr>
                    <th>Name</th>
                    <th style="width: 20%;">Nationality</th>
                    <th>Passport #</th>
                    <th>Passport Exp</th>
                </tr>
            </thead>
            <tbody class="companions" data-prototype="{{ 
'<td>' ~ form_widget(edit_form.orderCompanions.vars.prototype.name) ~ '</td>' 
~ '<td>' ~ form_widget(edit_form.orderCompanions.vars.prototype.nationality) ~ '</td>'
~ '<td>' ~ form_widget(edit_form.orderCompanions.vars.prototype.passportNumber) ~ '</td>'
~ '<td>' 
~ form_widget(edit_form.orderCompanions.vars.prototype.passportExpiry.day, {'attr': { 'style': 'display:none' } }) 
~ form_widget(edit_form.orderCompanions.vars.prototype.passportExpiry) 
~ '</td>'
~ '<td>' 
~ '<a href="#" class="btn removeCompanion text-danger pull-right" tabindex="-100"><span class="glyphicon glyphicon-minus-sign"></span></a>'
~ '</td>'
                   }}">
                {# TODO: Expiry date initial this month #}
                {% for companion in edit_form.orderCompanions %}
                    <tr>
                        <td>{{ form_widget(companion.name) }}</td>
                        <td>{{form_widget(companion.nationality) }}</td>
                        <td>{{form_widget(companion.passportNumber)}}</td>
                        <td>
                            {{form_widget(companion.passportExpiry.day, {'attr': { 'style': 'display:none' } }) }}
                            {{form_widget(companion.passportExpiry) }}
                        </td>
                        <td>
                            <a href="#" class="btn removeCompanion text-danger pull-right" tabindex="-100"><span class="glyphicon glyphicon-minus-sign"></span></a>
                        </td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>
</div>
