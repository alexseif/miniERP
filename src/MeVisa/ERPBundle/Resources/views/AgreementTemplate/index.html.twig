{% extends ':default:admin.html.twig' %}

{% block content %}
    <h1>AgreementTemplate list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Agreement</th>
                <th>Signee</th>
                <th>Signeetitle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('agreement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.agreement }}</td>
                <td>{{ entity.signee }}</td>
                <td>{{ entity.signeeTitle }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('agreement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('agreement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('agreement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
