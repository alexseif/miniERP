            <tr>
                <td><a href="{{ path('ordercompanions_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.nationality }}</td>
                <td>{{ entity.pax }}</td>
                <td>{{ entity.passportNumber }}</td>
                <td>{{ entity.passportExpiry }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ordercompanions_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
