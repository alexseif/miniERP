{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ProductPrices list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Age</th>
                <th>Cost</th>
                <th>Costcurrency</th>
                <th>Price</th>
                <th>Pricecurrency</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_pricing_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.cost }}</td>
                <td>{{ entity.costCurrency }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.priceCurrency }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_pricing_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_pricing_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_pricing_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
