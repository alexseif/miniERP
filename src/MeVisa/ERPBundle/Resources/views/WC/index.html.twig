{% extends ':default:admin.html.twig' %}

{% block content %}
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="panel-title">WC list</span>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped records_list">
        <thead>
          <tr>
            <th>Id</th>
            <th>Header</th>
            <th>Content</th>
            <th>Result</th>
            <th>Createdat</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for entity in entities %}
            <tr>
              <td><a href="{{ path('wc_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.header[:24] }}</td>
              <td>{{ entity.content[:24] }}</td>
              <td>{{ entity.result }}</td>
              <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
              <td><a href="{{ path('wc_show', { 'id': entity.id }) }}">show</a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
