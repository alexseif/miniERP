{% extends '::base.html.twig' %}

{% block body -%}
    <h1>OrderPayments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Method</th>
                <th>Amount</th>
                <th>State</th>
                <th>Detail</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('orderpayments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.method }}</td>
                <td>{{ entity.amount }}</td>
                <td>{{ entity.state }}</td>
                <td>{{ entity.detail }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('orderpayments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('orderpayments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('orderpayments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
