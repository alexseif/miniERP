{% extends ':default:admin.html.twig' %}

{% block content %}
    <h1>Company</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Account</th>
                <td>{{ entity.account }}</td>
            </tr>
            <tr>
                <th>Phones</th>
                <td>{{ entity.phones }}</td>
            </tr>
            <tr>
                <th>Signee1</th>
                <td>{{ entity.signee1 }}</td>
            </tr>
            <tr>
                <th>Signee1title</th>
                <td>{{ entity.signee1Title }}</td>
            </tr>
            <tr>
                <th>Signee2</th>
                <td>{{ entity.signee2 }}</td>
            </tr>
            <tr>
                <th>Signee2title</th>
                <td>{{ entity.signee2Title }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('company') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('company_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
