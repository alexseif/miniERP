{% extends ':default:admin.html.twig' %}

{% block content %}
    <!-- page content -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Company</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped records_list">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Account</th>
                                <th>Phones</th>
                                <th>Signee1</th>
                                <th>Signee1title</th>
                                <th>Signee2</th>
                                <th>Signee2title</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.address }}</td>
                                    <td>{{ entity.account }}</td>
                                    <td>{{ entity.phones }}</td>
                                    <td>{{ entity.signee1 }}</td>
                                    <td>{{ entity.signee1Title }}</td>
                                    <td>{{ entity.signee2 }}</td>
                                    <td>{{ entity.signee2Title }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('company_show', { 'id': entity.id }) }}">show</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('company_edit', { 'id': entity.id }) }}">edit</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('company_new') }}">Create a new entry</a>
{% endblock %}