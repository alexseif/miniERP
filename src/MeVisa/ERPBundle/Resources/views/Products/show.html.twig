{% extends ':default:admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Product <small> {{ entity.name }} </small></span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped records_list">
                            <tbody>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ entity.name }}</td>
                                </tr>
                                <tr>
                                    <th>Required Documents</th>
                                    <td>
                                        {% for req in entity.requiredDocuments%}
                                            {% filter upper %}{{ req }}{% endfilter %}<br/>
                                        {% endfor %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{% if entity.enabled %}Enabled{% else %}Disabled{% endif %}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-10">
                            <a class="btn btn-warning " href="{{ path('admin_products') }}">Back</a>
                        </div>
                        <div class="col-sm-2">
                            <a class="btn btn-primary pull-right" href="{{ path('admin_products_edit', { 'id': entity.id }) }}">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
