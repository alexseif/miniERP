{% extends ':default:admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <span class="panel-title">Product <small> {{ entity.name }} </small></span>
                    <span class="label label-{% if entity.enabled %}success{% else %}danger{% endif %} pull-right">{% if entity.enabled %}Enabled{% else %}Disabled{% endif %}</span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <ul class="list-group">
                                <li class="list-group-item clearfix">
                                    <label class="col-sm-4">Name</label> 
                                    {{ entity.name }}
                                </li>
                                <li class="list-group-item clearfix">
                                    <label class="col-sm-12">Required Documents</label>
                                    {% for req in entity.requiredDocuments%}
                                        {% filter upper %}{{ req }}{% endfilter %}<br/>
                                    {% endfor %}
                                </li>
                                <li class="list-group-item clearfix"><label class="col-sm-4">Vendor</label> {{ entity.vendor.name }}</li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <ul class="list-group">
                                <li class="list-group-item clearfix">
                                    <label class="col-sm-4">Price</label> 
                                    {{ (entity.pricing|last)?(entity.pricing|last.price/100)|localizedcurrency('RUB') }}
                                </li>
                                <li class="list-group-item clearfix"><label class="col-sm-4">Cost</label> {{ (entity.pricing|last)?(entity.pricing|last.cost/100)|localizedcurrency('RUB') }}</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-10">
                            <a class="btn btn-warning " href="{{ path('admin_products') }}">Back</a>
                        </div>
                        <div class="col-sm-2">
                            <a class="btn btn-primary pull-right" href="{{ path('admin_products_edit', { 'id': entity.id }) }}">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
