{% extends ':default:admin.html.twig' %}

{% block content %}
    <div class="clearfix" style="margin-bottom: 20px;">
        <div class="btn-group pull-right">
            <a href="{{ path('orders_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Order</a>
            <a href="{{ path('customers_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Customer</a>
        </div>
    </div>
    {# TODO: Make panels colapsible  #}
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Pending Orders <span class="badge">0</span></span>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Documents Required <span class="badge">0</span></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Completed Orders today <span class="badge">0</span></span>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Post Orders <span class="badge">0</span></span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}