{% extends 'AdminAdminBundle:Default:adminLayout.html.twig' %}
{% block backLink %}{{ path('customers') }}{% endblock %}
{% block adminPanelTitle %}Customer{% endblock %}
{% block adminPanelBody %}
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped records_list firstCol25">
            <tbody>
                <tr><th>Name</th><td>{{ entity.name }}</td></tr>
                <tr><th>Email</th><td>{{ entity.email }}</td></tr>
                <tr><th>Phone</th><td>{{ entity.phone }}</td></tr>
                <tr><th>Agent</th><td>{{ (entity.agent)?'Yes':'No' }}</td></tr>
            </tbody>
        </table>
    </div>
{% endblock %}
{% block adminPanelFooter %}
    <div class="panel-footer">
        <a class="btn btn-default" href="#">Orders</a>
        {% if(is_granted('ROLE_SUPER_ADMIN')) %}
            <a class="btn btn-primary pull-right" href="{{ path('customers_edit', { 'id': entity.id }) }}">Edit</a>
        {% endif %}
    </div>
</div>
{% endblock %}
